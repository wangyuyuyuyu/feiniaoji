.search,.search_input {
	width: 100%;
	height: 40px;
	background-color: #CFCFCF;
	display: flex;
	align-items: center;
	position: fixed;
	top:0;
	left:0;
}
.search {
	justify-content:space-around;
}
.search_input {
	justify-content:space-around;	
}
.search view, .search_input view {
	height: 28px;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 5px;
	text-align: center;
	display: flex;
	align-items: center;
}
.search view {
	width: 94%;
	justify-content:center;
}
.search image {
	display: block;
	width: 6%;
	height: 53%;
	margin-right: 5px;
}
.search_input view {
	padding-left: 10px;
}
.search icon,.search_input icon {
	display: inline-block;
	margin: 13px 4px 0 0;
	height: 26px;
	line-height: 26px;
}
.search text {
	font-size: 12px;
	color: #CFCFCF;
}
.search_input view {
	width: 80%;
	text-align: left;
	margin-right: -10px;
}
.search_input text {
	display: inline-block;
	width: 40px;
	height: 30px;
	line-height: 30px;
	font-size: 16px;
	color:#7B68EE;
	text-align: right;
}
.search_input input {
	font-size: 14px;
	width: 90%;
}
.body {
	width: 100%;
	height: auto;
	margin-bottom: 50px;
}
.contain {
	margin-top: 40px;
}
.chat,.chat_groups,.chat_lists{
	width: 100%;
	height: 45px;
	display: flex;
	align-items: center;
}
.chat,.chat_groups {
	border-bottom: 1px solid rgba(173,185,193,0.5);
}
.chat image {
	width: 6%;
	height: 50%;
	margin:0 13px 0 10px;
}
.chat_groups image {
	width: 8%;
	height: 54%;
	margin:0 10px 0 8px;
}
.chat_lists image {
	width: 12%;
	height:100%;
	margin-right: 2px;
}
.chat text,.chat_groups text,.chat_lists text {
	font-size:14px;
}
.numbers {
	width: 100%;
	height: 60px;
}
.nbr_header {
	height: 20px;
	background-color: #D4D4D4;
	line-height: 20px;
	padding-left: 16px;
}
.nbr_body {
	width: 70%;
	height: 40px;
	display: inline-block;
	font-size: 16px;
	line-height: 40px;
	margin-right: 0;
	float: left;
}
.mask {
	background-color: black;
	opacity: 0.4;
	position: absolute;
	top: 40px;
	left: 0;
	right: 0;
	bottom: 0;
}
.delete {
	width: 30px;
	height: 35px;
	float: right;
	margin-top: 6px;
}
.delete image {
	width: 16px;
	height: 2px;
}
.info {
	width: 12%;
	height: 40px;
	display: inline-block;
	float: left;
}
.info image {
	width: 68%; 
	height: 70%;
	display: inline-block;
	margin: 6px auto auto 6px;
}




.chatRoom_tab {
	width: 100%;
	height: 50px;
	background-color: rgb(250,251,252);
	position: fixed;
	bottom: 0;
	right: 0;
	border-top: 1px solid rgba(173,185,193,0.5);
	display: flex;
	justify-content: space-around;
}
.contacts,.settings {
	width: 47px;
	height: 37px;
	margin-top: 8px;
}
.chats {
	width: 37px;
	height: 37px;
	margin-top: 8px;
}
.contacts image,.settings image {
	width: 100%;
	height: 100%;
}
.chats image {
	width: 100%;
	height: 100%;
}

.friends{
  height: 110rpx;
  line-height: 110rpx;
  margin: 0 30rpx;
  border-top: 6rpx solid rgba(41, 135, 246, 1);
  margin-top: 20rpx;
  background: white;
  border-radius: 3rpx;
  padding-left: 30rpx; 
  box-shadow: 0px 2px 3px 1px rgba(217,225,231,0.66);
}
.friends image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;
}