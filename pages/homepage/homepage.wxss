/* 头部 */
page{
  background: rgba(248,248,248,1);
}
.header{
  width: 750rpx;
  height: 436rpx;
  position: relative;
}

.banners{
  width: 100%;
  height: 436rpx;
}
.indicats{
  width: 90%;
  height: 8rpx;
  margin: 0 auto;
  padding-top: 247rpx;
  text-align: right;
}
.indicats view{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #fff;
  display: inline-block;
  margin: 0 6rpx;
}
.indicats .chose{
  width: 24rpx;
  border-radius: 400px;
}
.header image{  
  width: 750rpx;
  height: 436rpx;
}
.header_bies{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(255,255,255,0) 45%, rgba(255,255,255,1));
}
.header_content{
  width: 690rpx;
  height: 200rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 0px 4px 6px 1px rgba(217,225,231,0.66);
  position: absolute;
  top: 300rpx;
  left: 30rpx;
  border-radius: 10rpx;
}
.header_content_item{
  width: 314rpx;
  height: 140rpx;
  margin:14rpx 0 0 30rpx;
  float: left;
  position: relative;
}
.header_content_item text{
  width: 104rpx;
  height: 36rpx;
  opacity: 1;
  font-size: 26rpx;
  font-family: PingFang;
  color: rgba(155,155,155,1);
  line-height: 36rpx;
  letter-spacing: 0px;
  display: block;
  margin-top: 30rpx;
}
.header_content_item view{
  width: 128rpx;
  height: 44rpx;
  opacity: 1;
  font-size: 32rpx;
  font-family: PingFangSC;
  color: rgba(74,74,74,1);
  line-height: 44rpx;
  letter-spacing: 0px;
  font-weight: bold;
}
.header_content_item image{
  position: absolute;
  width: 172rpx;
  height: 172rpx;
  top: 0rpx;
  right:0rpx;
}
.line{
  position: absolute;
  height: 200rpx;
  width: 1rpx;
  background-color: rgba(238,238,238,1);
  top: 0;
  left: 344rpx;
}


